{
  "compileOnSave": false,
  "compilerOptions": {
    "outDir": "./dist/out-tsc",
    "baseUrl": "src",
    "sourceMap": true,
    "declaration": false,
    "moduleResolution": "node",
    "emitDecoratorMetadata": true,
	"experimentalDecorators": true,
	"downlevelIteration": true,
    "target": "es2019",
    "typeRoots": [
      "node_modules/@types",
      "./src/typings"
